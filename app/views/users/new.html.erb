<h1>Sign up</h1>


<ul>

	<%= form_for(@user) do |f| %>
		<li>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</li>
		<li>			
			<%= f.label :screen_name %>
			<%= f.text_field :screen_name %>
		</li>			
		<li>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</li>
		<li>
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
		</li>			
		<li>
			<%= f.submit "Create account", class: "btn btn-primary" %>
		</li>		
	<% end %>
</ul>