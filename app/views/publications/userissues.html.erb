<div class="container">
  <h1><%= @publication.title %> </h1>
  <%= form_tag("/publications/#{@publication.id}/userissuesupdate" , method: :patch) do %>
   <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Year</th>
        <% @issuedescriptions.each do |issuedescription| %>
        	<th> <%= issuedescription.title %> </th>
        <% end %>
      </tr>
    </thead>
   	<tbody>
 			<% issue_year = IssuesHelper::CurrentYear.new() %>
 			<% @issues.each do |issue| %>
				<%= issue_year.add_new_row_on_change_of_year(issue.year) %>
				<td>
				 		<%= check_box_tag "userissue[]", issue.id , true_when_has_user_id(issue) %>
				    <%= label_tag issue.no.to_s %>     
 				</td>
 			<% end %>
   		</tr>
   	</tbody>
  </table>
  <%= submit_tag "Save", class:"btn btn-primary" %>
  <% end %>
</div>