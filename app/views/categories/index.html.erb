<div class="container">
	<h1>Indexes  </h1>
		<h2>
			<!-- letter ranges tabs -->
			<ul class="nav nav-tabs nav-justified">
				<% @letter_ranges.each do |letters| %>
					<li <%= add_active_class_when_selected_letter(letters,@letters) %> 		> 
			 			<%= link_to letters.join(' - '), byletter_categories_path(letters[0])  %>
					</li>
				<% end %> 
			</ul>
		</h2>
	
		<% if @categories.length == 0 %>
	  	<p> No indexes found </p>
		<% else %>
			<div class="row recipe" >
				<%= render 'layouts/categories_list' %>
			</div>
  	<% end %>
</div>
