<h3>Recipes</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Recipe</th>
        <% if logged_in? %>
        	<th>Rating</th>
        <% end %>
        <th>Publication</th>
        <th>Issue</th>
        <th>Year</th>
        <th>Page</th>
      </tr>
    </thead>
    <tbody>
    	<% @recipes.each do |recipe| %>
	      <tr>
	        <td>
 	      		<% if logged_in? %>
	      			<%= raw(get_user_like_symbol(recipe)) %>
	      		<% end %>
	        	<%= raw format_recipe_title(recipe, @catrec, @category_id) %>
	        	<% if logged_in? %>
	        		<td>
	        		<%= raw(get_user_rating_symbol(recipe)) %>
	        		</td>
	        	<% end %>	
	        </td>
	        <td><%= recipe.pub %></td>
	        <td><%= link_to recipe.desc, issue_path(recipe.issue_id) %>
	        <%= raw user_owned_issue(recipe) %>
	        </td>
	        <td><%= recipe.year %></td>
	        <td class="recipepage"><%= recipe.page %></td>
	      </tr>
	     <% end %>
    </tbody>
  </table>
   <% if @recipes.size == 0 %>
  	<p>No recipes available.</p>
  <% end %>